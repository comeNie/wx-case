.main{ display: flex; height: 100%; }
.title{ padding: 20rpx; font-size: 44rpx; }
.brand{ width:30%; background:#F7FBFE; display:flex; align-items:center; justify-content:center; flex-wrap:wrap; height:100%; padding:10px 0; box-sizing:border-box; }

.active{ background:#ffda44; border-radius:30px; padding:5px 0; }

.mobile_btn{ margin:10rpx 30rpx; box-sizing: border-box; text-align: center; font-size: 28rpx; color: #141414; border-radius: 20px; margin-bottom: 40rpx; padding:5px 0; }

.mobile_btn wx-image{ display: block; width: 148rpx; height: 48rpx; }

.list_t{ font-size: 16px; color: #141414; margin:20rpx; }

.line{ width: 30%; height:1rpx; background-color: rgba(90, 90, 90, 0.2); }

.list_c{ width: 100%; }

.item{ padding: 10rpx 30rpx; background: #F2F6F9; border-radius: 50rpx; font-size: 28rpx; color: #4D4D4D; line-height: 28rpx; margin: 20rpx; float: left; }

.box{ margin-bottom: 20rpx; }

.right{ width: 70%; height: 100%; position: relative; }

.clearfix:before, .clearfix:after { display: table; content: \x22 \x22; }

.clearfix:after { clear: both; }

.btn_box{ text-align:center; position: absolute; left:0; bottom:0; width:100%; box-sizing:border-box; height: 10%; }

.btn{ padding: 15rpx 28rpx; background-color:#FFDA44; border-radius: 30px; font-size: 14px; color: #141414; margin: 0 auto; position: absolute; left: 50%; top: 50%; -webkit-transform: translate(-50%,-50%); transform: translate(-50%,-50%); }